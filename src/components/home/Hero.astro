---
const stats = [
  { value: '15+', label: 'Years Experience' },
  { value: '500+', label: 'Projects Completed' },
  { value: '100+', label: '5-Star Reviews' },
];
---

<section class="bg-brand-navy min-h-[90vh] relative">
  <div class="grid lg:grid-cols-2 min-h-[90vh]">
    <!-- Left Content -->
    <div class="flex flex-col justify-center px-6 sm:px-12 lg:px-16 xl:px-24 py-16 lg:py-24">
      <!-- Label -->
      <span class="text-brand-blue text-xs font-semibold tracking-[0.2em] uppercase mb-6">
        Property Pros Drywall
      </span>

      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight mb-6">
        Professional Drywall Services in Central Minnesota
      </h1>

      <!-- Description -->
      <p class="text-gray-400 text-lg leading-relaxed mb-8 max-w-xl">
        From residential renovations to commercial construction, we deliver expert drywall installation, repair, and finishing. Quality craftsmanship backed by 15+ years of experience.
      </p>

      <!-- CTA Button -->
      <div class="mb-12">
        <a
          href="/contact"
          class="inline-flex items-center gap-2 border-2 border-brand-blue text-white px-8 py-4 rounded-lg font-semibold hover:bg-brand-blue transition-all duration-300"
        >
          Get a Free Quote
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

      <!-- Stats Row -->
      <div class="flex flex-wrap gap-8 lg:gap-12 pt-8 border-t border-white/10">
        {stats.map((stat) => (
          <div>
            <div class="text-4xl lg:text-5xl font-bold text-white mb-1">
              {stat.value}
            </div>
            <div class="text-sm text-gray-500">
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Right Image -->
    <div class="relative hidden lg:block">
      <div class="absolute inset-0 bg-gradient-to-br from-brand-navy/50 to-brand-blue/30">
        <!-- Placeholder for hero image -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center text-white/40">
            <svg class="w-32 h-32 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <p class="text-lg">Hero Image</p>
            <p class="text-sm">Drywall Professional at Work</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
