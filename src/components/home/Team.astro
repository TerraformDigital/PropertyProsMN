---
const team = [
  { name: 'John Peterson', role: 'Owner / Lead Estimator', initials: 'JP' },
  { name: 'Mike Stevens', role: 'Project Manager', initials: 'MS' },
  { name: 'David Garcia', role: 'Lead Installer', initials: 'DG' },
  { name: 'Chris Thompson', role: 'Finishing Specialist', initials: 'CT' },
];
---

<section class="bg-brand-navy">
  <div class="grid lg:grid-cols-2">
    <!-- Left - Stats & Text -->
    <div class="flex flex-col justify-center px-6 sm:px-12 lg:px-16 xl:px-24 py-16 lg:py-24">
      <div class="text-6xl lg:text-7xl font-bold text-brand-blue mb-4">
        100+
      </div>
      <div class="text-white text-xl mb-8">
        Combined Years of Experience
      </div>

      <span class="text-brand-blue text-xs font-semibold tracking-[0.2em] uppercase mb-4">
        Our Team
      </span>
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Meet Our Team
      </h2>
      <p class="text-gray-400 leading-relaxed mb-8 max-w-lg">
        Our skilled professionals bring decades of combined experience to every project. Each team member is committed to delivering exceptional quality and customer service.
      </p>

      <a
        href="/about"
        class="inline-flex items-center gap-2 text-brand-blue font-semibold hover:gap-3 transition-all duration-300 w-fit"
      >
        Learn More About Us
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- Right - Team Grid -->
    <div class="bg-brand-navy/50 p-6 sm:p-12 lg:p-16">
      <div class="grid grid-cols-2 gap-4 lg:gap-6">
        {team.map((member) => (
          <div class="bg-white/5 rounded-xl p-6 text-center hover:bg-white/10 transition-colors duration-300">
            <!-- Photo Placeholder -->
            <div class="w-24 h-24 lg:w-32 lg:h-32 bg-gradient-to-br from-brand-blue to-brand-navy rounded-xl flex items-center justify-center text-white font-bold text-2xl lg:text-3xl mb-4 mx-auto">
              {member.initials}
            </div>
            <h3 class="font-semibold text-white mb-1">{member.name}</h3>
            <p class="text-sm text-gray-400">{member.role}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
