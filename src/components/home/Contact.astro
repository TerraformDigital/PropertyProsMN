---
const serviceOptions = [
  'Drywall Installation',
  'Drywall Repair',
  'Drywall Finishing',
  'Texture Services',
  'Commercial Drywall',
  'Contractor Services',
  'Other',
];
---

<section id="contact" class="section section-white">
  <div class="padding-global">
    <div class="container-large">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
        <!-- Left Column -->
        <div>
          <span class="section-label">Contact Us</span>
          <h2 class="section-title mb-6">
            Get in touch with us today
          </h2>
          <p class="text-secondary mb-8">
            Ready to start your project? Fill out the form and we'll get back to you within 24 hours with a free, no-obligation quote.
          </p>

          <!-- Image -->
          <div class="aspect-[4/3] rounded-xl overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=800&q=80"
              alt="Professional drywall work"
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Right Column - Contact Form -->
        <div>
          <form class="space-y-6">
            <!-- Name -->
            <div>
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="form-input"
                placeholder="Your name"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="form-label">Phone</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="form-input"
                placeholder="Your phone"
              />
            </div>

            <!-- Service Type -->
            <div>
              <label for="service" class="form-label">Service</label>
              <select
                id="service"
                name="service"
                required
                class="form-input is-select"
              >
                <option value="">Select a service</option>
                {serviceOptions.map((option) => (
                  <option value={option.toLowerCase().replace(/\s+/g, '-')}>{option}</option>
                ))}
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="form-label">Message</label>
              <textarea
                id="message"
                name="message"
                class="form-input form-textarea"
                placeholder="Your message"
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="form-submit">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
