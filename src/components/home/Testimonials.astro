---
// Placeholder testimonials - will be replaced with Sanity data
const testimonials = [
  {
    quote: "Property Pros did an outstanding job on our basement renovation. The drywall finish was flawless and they completed the work ahead of schedule. Highly recommend!",
    author: "Sarah M.",
    role: "Homeowner",
    location: "St. Cloud, MN",
    rating: 5,
  },
  {
    quote: "As a general contractor, I've worked with many drywall subs. Property Pros is by far the most reliable and professional. They're now my go-to for every project.",
    author: "Mike Johnson",
    role: "General Contractor",
    location: "Sartell, MN",
    rating: 5,
  },
  {
    quote: "Fast, clean, and professional. They repaired water damage in our ceiling and you can't even tell there was ever a problem. Great communication throughout.",
    author: "Jennifer & Tom K.",
    role: "Homeowners",
    location: "Waite Park, MN",
    rating: 5,
  },
];

function renderStars(rating: number) {
  return Array(5).fill(0).map((_, i) => i < rating);
}
---

<section class="py-20 bg-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="text-brand-blue font-semibold text-sm uppercase tracking-wider">Testimonials</span>
      <h2 class="text-3xl md:text-4xl font-bold text-brand-navy mt-3 mb-4">
        What Our Clients Say
      </h2>
      <p class="text-gray-600 text-lg">
        Don't just take our word for it. Here's what homeowners and contractors throughout Central Minnesota have to say about working with us.
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-brand-blue-light rounded-2xl p-8 relative">
          <!-- Quote Icon -->
          <div class="absolute top-6 right-6 text-brand-blue/20">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>

          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {renderStars(testimonial.rating).map((filled) => (
              <svg class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <p class="text-gray-700 mb-6 leading-relaxed">
            "{testimonial.quote}"
          </p>

          <!-- Author -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-brand-blue rounded-full flex items-center justify-center text-white font-bold">
              {testimonial.author.split(' ').map(n => n[0]).join('')}
            </div>
            <div>
              <div class="font-semibold text-brand-navy">{testimonial.author}</div>
              <div class="text-sm text-gray-600">{testimonial.role} â€¢ {testimonial.location}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- View All Link -->
    <div class="text-center mt-12">
      <a href="/testimonials" class="inline-flex items-center gap-2 text-brand-blue font-semibold hover:gap-3 transition-all">
        View All Reviews
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
