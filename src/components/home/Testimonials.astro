---
const testimonials = [
  {
    quote: "A brief customer testimonial that builds trust and credibility for the business.",
    author: "Mark T.",
    location: "St. Cloud, MN",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&q=80",
  },
  {
    quote: "A brief customer testimonial that builds trust and credibility for the business.",
    author: "Sarah M.",
    location: "Sartell, MN",
    image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&q=80",
  },
  {
    quote: "A brief customer testimonial that builds trust and credibility for the business.",
    author: "Mike Johnson",
    location: "Waite Park, MN",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&q=80",
  },
  {
    quote: "A brief customer testimonial that builds trust and credibility for the business.",
    author: "Jennifer K.",
    location: "Cold Spring, MN",
    image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=400&q=80",
  },
];
---

<section class="section section-light">
  <div class="padding-global">
    <div class="container-large">
      <!-- Section Header -->
      <div class="section-header">
        <span class="section-label">Testimonials</span>
        <h2 class="section-title">What our customers are saying</h2>
      </div>

      <!-- Testimonials Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {testimonials.map((testimonial) => (
          <div class="testimonial-card">
            <!-- Customer Photo -->
            <img
              src={testimonial.image}
              alt={testimonial.author}
              class="testimonial-image"
            />

            <!-- Stars -->
            <div class="testimonial-stars">
              {[...Array(5)].map(() => (
                <svg class="testimonial-star" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            <!-- Quote -->
            <p class="testimonial-quote">
              "{testimonial.quote}"
            </p>

            <!-- Author -->
            <div>
              <div class="testimonial-author">{testimonial.author}</div>
              <div class="testimonial-location">{testimonial.location}</div>
            </div>
          </div>
        ))}
      </div>

      <!-- Navigation Dots -->
      <div class="flex justify-center gap-2 mt-8">
        <button class="w-3 h-3 rounded-full bg-brand-navy" aria-label="Page 1"></button>
        <button class="w-3 h-3 rounded-full bg-gray-300" aria-label="Page 2"></button>
      </div>
    </div>
  </div>
</section>
