---
import { sanityFetch, urlFor } from '../../lib/sanity';
import { featuredTestimonialsQuery } from '../../lib/queries';

// Type definition
interface SanityTestimonial {
  _id: string;
  customerName: string;
  location: string;
  quote: string;
  rating: number;
  image: any;
}

// Fetch from Sanity
let sanityTestimonials: SanityTestimonial[] = [];

try {
  sanityTestimonials = await sanityFetch<SanityTestimonial[]>(featuredTestimonialsQuery) || [];
} catch (error) {
  console.error('Error fetching testimonials from Sanity:', error);
}

// Static fallback testimonials (no external images - uses initials)
const staticTestimonials = [
  {
    quote: "Property Pros completely transformed our basement. The drywall work was flawlessâ€”you can't even tell where the seams are. Highly recommend!",
    author: "Mark T.",
    location: "St. Cloud, MN",
    image: null, // Uses initial placeholder
    rating: 5,
  },
  {
    quote: "Professional, punctual, and the quality exceeded our expectations. They made our home renovation stress-free.",
    author: "Sarah M.",
    location: "Sartell, MN",
    image: null, // Uses initial placeholder
    rating: 5,
  },
  {
    quote: "Great communication throughout the project. The team was respectful of our home and cleaned up every day.",
    author: "Mike Johnson",
    location: "Waite Park, MN",
    image: null, // Uses initial placeholder
    rating: 5,
  },
  {
    quote: "Called for emergency water damage repair and they were out the same day. Excellent work matching our existing texture.",
    author: "Jennifer K.",
    location: "Cold Spring, MN",
    image: null, // Uses initial placeholder
    rating: 5,
  },
];

// Use Sanity data if available
const hasSanityTestimonials = sanityTestimonials.length > 0;
---

<section class="section section-light">
  <div class="padding-global">
    <div class="container-large">
      <!-- Section Header -->
      <div class="section-header">
        <span class="section-label">Testimonials</span>
        <h2 class="section-title">What our customers are saying</h2>
      </div>

      <!-- Testimonials Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {hasSanityTestimonials ? (
          sanityTestimonials.map((testimonial) => (
            <div class="testimonial-card">
              <!-- Customer Photo -->
              {testimonial.image ? (
                <img
                  src={`${urlFor(testimonial.image)}?w=400&h=300&fit=crop&auto=format`}
                  alt={testimonial.customerName}
                  class="testimonial-image"
                />
              ) : (
                <div class="testimonial-image bg-bg-primary flex items-center justify-center">
                  <span class="text-4xl text-text-tertiary">{testimonial.customerName.charAt(0)}</span>
                </div>
              )}

              <!-- Stars -->
              <div class="testimonial-stars">
                {[1, 2, 3, 4, 5].map((star) => (
                  <svg
                    class={`testimonial-star ${star <= (testimonial.rating || 5) ? 'text-yellow-400' : 'text-gray-200'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <!-- Quote -->
              <p class="testimonial-quote">
                "{testimonial.quote}"
              </p>

              <!-- Author -->
              <div>
                <div class="testimonial-author">{testimonial.customerName}</div>
                <div class="testimonial-location">{testimonial.location}</div>
              </div>
            </div>
          ))
        ) : (
          staticTestimonials.map((testimonial) => (
            <div class="testimonial-card">
              <!-- Customer Photo / Initial -->
              <div class="testimonial-image bg-brand-navy/10 flex items-center justify-center">
                <span class="text-4xl font-medium text-brand-navy">{testimonial.author.charAt(0)}</span>
              </div>

              <!-- Stars -->
              <div class="testimonial-stars">
                {[1, 2, 3, 4, 5].map((star) => (
                  <svg
                    class={`testimonial-star ${star <= testimonial.rating ? 'text-yellow-400' : 'text-gray-200'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <!-- Quote -->
              <p class="testimonial-quote">
                "{testimonial.quote}"
              </p>

              <!-- Author -->
              <div>
                <div class="testimonial-author">{testimonial.author}</div>
                <div class="testimonial-location">{testimonial.location}</div>
              </div>
            </div>
          ))
        )}
      </div>

      <!-- Navigation Dots -->
      <div class="flex justify-center gap-2 mt-8">
        <button class="w-3 h-3 rounded-full bg-brand-navy" aria-label="Page 1"></button>
        <button class="w-3 h-3 rounded-full bg-gray-300" aria-label="Page 2"></button>
      </div>
    </div>
  </div>
</section>
