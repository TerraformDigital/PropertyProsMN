---
const currentYear = new Date().getFullYear();
const gbpLink = 'https://maps.app.goo.gl/VKA3CwhTwx1r94eLA';

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About Us' },
  { href: '/reviews', label: 'Reviews' },
  { href: '/faq', label: 'FAQ' },
  { href: '/contact', label: 'Contact' },
];

const services = [
  { href: '/services/drywall-installation', label: 'Drywall Installation' },
  { href: '/services/drywall-repair', label: 'Drywall Repair' },
  { href: '/services/drywall-finishing', label: 'Drywall Finishing' },
  { href: '/services/textures', label: 'Texture Services' },
  { href: '/services/commercial', label: 'Commercial Drywall' },
  { href: '/services/contractor-services', label: 'Contractor Services' },
];
---

<footer class="footer">
  <div class="padding-global">
    <div class="container-large">
      <div class="footer-grid">
        <!-- Company Info -->
        <div>
          <a href="/">
            <img
              src="/Property-Pros-Logo.png"
              alt="Property Pros Drywall"
              class="footer-logo"
            />
          </a>
          <p class="footer-description">
            Professional drywall services for residential and commercial projects throughout Central Minnesota. Quality craftsmanship you can trust.
          </p>

          <!-- Social Links -->
          <div class="footer-social">
            <a href="#" class="footer-social-link" aria-label="Facebook">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5L14.17.5C10.24.5,9.5,3.44,9.5,5.32v2.15H7v4h2.5v12h5v-12h3.85l.42-4Z"/>
              </svg>
            </a>
            <a href="#" class="footer-social-link" aria-label="Instagram">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12,2.16c3.2,0,3.58,0,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s0,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.65.07-4.85.07s-3.58,0-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.65-.07-4.85s0-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.18,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33,0,7.05.07c-4.35.2-6.78,2.62-7,7C0,8.33,0,8.74,0,12s0,3.67.07,4.95c.2,4.36,2.62,6.78,7,7C8.33,24,8.74,24,12,24s3.67,0,4.95-.07c4.35-.2,6.78-2.62,7-7C24,15.67,24,15.26,24,12s0-3.67-.07-4.95c-.2-4.35-2.62-6.78-7-7C15.67,0,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/>
              </svg>
            </a>
            <a href="#" class="footer-social-link" aria-label="LinkedIn">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.45,20.45H16.89V14.88c0-1.33,0-3-1.85-3s-2.13,1.45-2.13,2.94v5.66H9.34V9h3.41v1.56h.05a3.74,3.74,0,0,1,3.37-1.85c3.6,0,4.27,2.37,4.27,5.46v6.32ZM5.34,7.43A2.07,2.07,0,1,1,7.41,5.36,2.07,2.07,0,0,1,5.34,7.43Zm1.78,13H3.56V9H7.12ZM22.22,0H1.77A1.75,1.75,0,0,0,0,1.73V22.27A1.75,1.75,0,0,0,1.77,24H22.22A1.76,1.76,0,0,0,24,22.27V1.73A1.76,1.76,0,0,0,22.22,0Z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="footer-title">Quick Links</h3>
          <ul class="footer-links">
            {quickLinks.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Services -->
        <div>
          <h3 class="footer-title">Services</h3>
          <ul class="footer-links">
            {services.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Contact Info -->
        <div>
          <h3 class="footer-title">Contact Us</h3>
          <ul class="footer-links">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-brand-blue mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <a href={gbpLink} target="_blank" rel="noopener noreferrer" class="footer-link hover:text-white">
                10848 80th Ave SE<br />
                Clear Lake, MN 55319
              </a>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <a href="tel:+13207438388" class="footer-link hover:text-white">
                320-743-8388
              </a>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href="mailto:info@propertyprosmn.com" class="footer-link hover:text-white">
                info@propertyprosmn.com
              </a>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-brand-blue mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="footer-link">
                Mon - Fri: 7:00 AM - 5:00 PM
              </span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="footer-bottom">
        <p class="footer-copyright">
          &copy; {currentYear} Property Pros Drywall. All rights reserved.
        </p>
        <div class="flex gap-6">
          <a href="/privacy" class="footer-link hover:text-white">Privacy Policy</a>
          <a href="/terms" class="footer-link hover:text-white">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
