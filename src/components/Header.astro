---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="navbar">
  <div class="padding-global">
    <div class="container-large">
      <div class="navbar-content">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
          <img
            src="/Property-Pros-Logo.png"
            alt="Property Pros Drywall"
            class="navbar-logo"
          />
        </a>

        <!-- Desktop Navigation -->
        <nav class="navbar-list">
          {navLinks.map((link) => (
            <li class="list-none">
              <a href={link.href} class="nav-link">
                {link.label}
              </a>
            </li>
          ))}
        </nav>

        <!-- CTA Button -->
        <div class="hidden md:flex items-center gap-6">
          <a href="tel:+13207438388" class="nav-link flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            320-743-8388
          </a>
          <a href="/contact" class="btn btn-outline-light">
            Free Quote
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 text-white/70 hover:text-white"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <nav id="mobile-menu" class="hidden lg:hidden pb-6">
        <div class="flex flex-col gap-2">
          {navLinks.map((link) => (
            <a
              href={link.href}
              class="nav-link px-4 py-2 hover:bg-white/5 rounded-lg"
            >
              {link.label}
            </a>
          ))}
          <a href="/contact" class="btn btn-outline-light mt-4">
            Get Free Quote
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
