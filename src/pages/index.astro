---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <main class="flex-grow">
    <!-- Hero Section -->
    <section class="bg-brand-navy text-white py-20">
      <div class="container-custom">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
            Professional Drywall Services in Minnesota
          </h1>
          <p class="text-xl text-gray-300 mb-8">
            Quality craftsmanship for residential and commercial projects.
            From new construction to repairs, we've got you covered.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/contact" class="btn-primary">
              Get a Free Quote
            </a>
            <a href="/services" class="btn-secondary">
              Our Services
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Stack Verification Section -->
    <section class="py-16 bg-brand-blue-light">
      <div class="container-custom">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-brand-navy mb-4">
            Tech Stack Verified
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            This placeholder confirms the Astro + Sanity + Tailwind stack is working correctly.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Astro Card -->
          <div class="bg-white rounded-xl shadow-lg p-6 text-center">
            <div class="w-16 h-16 bg-brand-blue rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-brand-navy mb-2">Astro</h3>
            <p class="text-gray-600">Static site generation with island architecture</p>
            <span class="inline-block mt-4 px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
              ✓ Working
            </span>
          </div>

          <!-- Sanity Card -->
          <div class="bg-white rounded-xl shadow-lg p-6 text-center">
            <div class="w-16 h-16 bg-brand-blue rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 3h18v18H3V3zm16 16V5H5v14h14z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-brand-navy mb-2">Sanity CMS</h3>
            <p class="text-gray-600">Headless CMS with embedded studio at /studio</p>
            <span class="inline-block mt-4 px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
              ✓ Configured
            </span>
          </div>

          <!-- Tailwind Card -->
          <div class="bg-white rounded-xl shadow-lg p-6 text-center">
            <div class="w-16 h-16 bg-brand-blue rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 6c-2.67 0-4.33 1.33-5 4 1-1.33 2.17-1.83 3.5-1.5.76.19 1.31.74 1.91 1.35.98 1 2.09 2.15 4.59 2.15 2.67 0 4.33-1.33 5-4-1 1.33-2.17 1.83-3.5 1.5-.76-.19-1.3-.74-1.91-1.35C15.61 7.15 14.5 6 12 6zm-5 6c-2.67 0-4.33 1.33-5 4 1-1.33 2.17-1.83 3.5-1.5.76.19 1.3.74 1.91 1.35C8.39 16.85 9.5 18 12 18c2.67 0 4.33-1.33 5-4-1 1.33-2.17 1.83-3.5 1.5-.76-.19-1.3-.74-1.91-1.35C10.61 13.15 9.5 12 7 12z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-brand-navy mb-2">Tailwind CSS</h3>
            <p class="text-gray-600">Utility-first CSS with brand colors</p>
            <span class="inline-block mt-4 px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
              ✓ Styled
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Brand Colors Preview -->
    <section class="py-16">
      <div class="container-custom">
        <h2 class="text-2xl font-bold text-brand-navy mb-8 text-center">Brand Colors</h2>
        <div class="flex flex-wrap justify-center gap-6">
          <div class="text-center">
            <div class="w-24 h-24 rounded-lg bg-brand-blue shadow-lg mb-2"></div>
            <p class="text-sm font-medium">brand-blue</p>
            <p class="text-xs text-gray-500">#1a6091</p>
          </div>
          <div class="text-center">
            <div class="w-24 h-24 rounded-lg bg-brand-black shadow-lg mb-2"></div>
            <p class="text-sm font-medium">brand-black</p>
            <p class="text-xs text-gray-500">#0f0f0f</p>
          </div>
          <div class="text-center">
            <div class="w-24 h-24 rounded-lg bg-brand-navy shadow-lg mb-2"></div>
            <p class="text-sm font-medium">brand-navy</p>
            <p class="text-xs text-gray-500">#0c1829</p>
          </div>
          <div class="text-center">
            <div class="w-24 h-24 rounded-lg bg-brand-blue-light shadow-lg border mb-2"></div>
            <p class="text-sm font-medium">brand-blue-light</p>
            <p class="text-xs text-gray-500">#e8f4fc</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Next Steps -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-2xl font-bold text-brand-navy mb-8 text-center">Next Steps</h2>
        <div class="max-w-2xl mx-auto">
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-brand-blue text-white flex items-center justify-center text-sm font-bold">1</span>
              <div>
                <p class="font-medium">Configure Sanity</p>
                <p class="text-gray-600 text-sm">Copy .env.example to .env and add your Sanity project credentials</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-brand-blue text-white flex items-center justify-center text-sm font-bold">2</span>
              <div>
                <p class="font-medium">Access Sanity Studio</p>
                <p class="text-gray-600 text-sm">Visit <code class="bg-gray-200 px-2 py-0.5 rounded">/studio</code> to manage content</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-brand-blue text-white flex items-center justify-center text-sm font-bold">3</span>
              <div>
                <p class="font-medium">Add Content</p>
                <p class="text-gray-600 text-sm">Create services, projects, testimonials, and blog posts</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-brand-blue text-white flex items-center justify-center text-sm font-bold">4</span>
              <div>
                <p class="font-medium">Build Pages</p>
                <p class="text-gray-600 text-sm">Create service pages, project gallery, and contact form</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-brand-navy text-white py-8">
    <div class="container-custom text-center">
      <p class="text-gray-400">
        &copy; {new Date().getFullYear()} Property Pros Drywall. All rights reserved.
      </p>
      <p class="text-sm text-gray-500 mt-2">
        Professional Drywall Services in Minnesota
      </p>
    </div>
  </footer>
</Layout>
