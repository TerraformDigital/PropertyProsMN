---
import Layout from '../layouts/Layout.astro';
import Contact from '../components/home/Contact.astro';

// <!-- SCHEMA: AggregateRating -->
// <!-- SCHEMA: Review (for each individual review) -->

const gbpLink = 'https://maps.app.goo.gl/VKA3CwhTwx1r94eLA';

const stats = [
  { value: '100+', label: '5-Star Reviews' },
  { value: '4.9', label: 'Average Rating' },
  { value: '2014', label: 'Since' },
];

// Featured reviews (longer testimonials)
const featuredReviews = [
  {
    quote: "Property Pros completely transformed our basement. From start to finish, the team was professional, communicative, and meticulous about every detail. The drywall work is absolutely flawless - you can't tell where any seams are. They even helped us plan the layout to maximize our space. This is the kind of contractor experience everyone hopes for but rarely gets.",
    name: 'Mike & Sarah T.',
    location: 'St. Cloud, MN',
    service: 'Basement Finishing',
    date: 'November 2024',
    rating: 5,
  },
  {
    quote: "After a pipe burst, we had extensive water damage in our living room and hallway. Property Pros responded within 24 hours, assessed the damage, and had a plan in place immediately. They removed the damaged drywall, made sure there was no mold, and restored everything to better than before. The texture matching on our knockdown ceiling was perfect. You'd never know anything happened.",
    name: 'Jennifer K.',
    location: 'Sartell, MN',
    service: 'Water Damage Repair',
    date: 'October 2024',
    rating: 5,
  },
  {
    quote: "As a general contractor, I need subcontractors I can rely on. Property Pros has been my go-to drywall team for three years now. They show up when they say they will, their work is consistently excellent, and they communicate proactively if anything changes. My clients always comment on the quality of the finished walls. Couldn't recommend them more highly.",
    name: 'Johnson Construction',
    location: 'Waite Park, MN',
    service: 'Commercial Partnership',
    date: 'September 2024',
    rating: 5,
  },
];

// Grid reviews (shorter testimonials)
const gridReviews = [
  {
    quote: "Removed our dated popcorn ceiling and gave us a beautiful smooth finish. The crew was clean and courteous. Worth every penny!",
    name: 'Linda M.',
    location: 'Clear Lake, MN',
    service: 'Popcorn Removal',
    rating: 5,
  },
  {
    quote: "Quick repair job on some holes before we listed our house. Done in one day, looked perfect for showings. Great price too.",
    name: 'Tom R.',
    location: 'Sauk Rapids, MN',
    service: 'Drywall Repair',
    rating: 5,
  },
  {
    quote: "Property Pros handled the drywall for our entire new construction home. Met every deadline and the quality exceeded expectations.",
    name: 'The Anderson Family',
    location: 'Sartell, MN',
    service: 'New Construction',
    rating: 5,
  },
  {
    quote: "Had them texture our garage after we finished it ourselves. They were patient, professional, and the orange peel finish looks great.",
    name: 'Dave S.',
    location: 'St. Cloud, MN',
    service: 'Texture Services',
    rating: 5,
  },
  {
    quote: "The team at Property Pros is honest and fair. They could have charged more but kept the estimate reasonable. Rare to find these days.",
    name: 'Carol H.',
    location: 'Clear Lake, MN',
    service: 'Drywall Repair',
    rating: 5,
  },
  {
    quote: "Finished our home office during COVID. Fast turnaround, clean work, and they wore masks without us even asking. Very considerate.",
    name: 'Robert & Amy P.',
    location: 'Waite Park, MN',
    service: 'Room Addition',
    rating: 5,
  },
  {
    quote: "We've used Property Pros for three different projects now. Consistent quality every time. They're our go-to for any drywall needs.",
    name: 'The Nguyen Family',
    location: 'St. Cloud, MN',
    service: 'Multiple Projects',
    rating: 5,
  },
  {
    quote: "Fixed a large hole in our hallway that our kids created. You literally cannot tell anything was ever wrong. Magic!",
    name: 'Jessica L.',
    location: 'Sartell, MN',
    service: 'Drywall Repair',
    rating: 5,
  },
  {
    quote: "Commercial buildout for our new dental office. On time, on budget, and the walls are perfectly smooth for our specialty finishes.",
    name: 'Dr. Williams',
    location: 'St. Cloud, MN',
    service: 'Commercial Drywall',
    rating: 5,
  },
  {
    quote: "They matched the texture in our 1970s home perfectly. Other contractors said it couldn't be done. Property Pros made it happen.",
    name: 'Dennis & Patricia K.',
    location: 'Sauk Rapids, MN',
    service: 'Texture Matching',
    rating: 5,
  },
  {
    quote: "Basement drywall done right. They handled everything from framing inspection coordination to final finish. Very turnkey experience.",
    name: 'Mark T.',
    location: 'Sartell, MN',
    service: 'Basement Finishing',
    rating: 5,
  },
  {
    quote: "Outstanding work ethic. The crew started early, worked hard, and cleaned up every day. Our house was never a mess during the project.",
    name: 'Susan B.',
    location: 'Clear Lake, MN',
    service: 'New Construction',
    rating: 5,
  },
];

// Helper function to render stars
const renderStars = (rating: number) => {
  return Array(rating).fill(null);
};
---

<Layout
  title="Customer Reviews & Testimonials | Property Pros Drywall | Central MN"
  description="Read reviews from satisfied Property Pros customers throughout Central Minnesota. See why homeowners and contractors trust us for drywall services."
>
  <!-- SCHEMA: AggregateRating -->
  <!-- SCHEMA: Review -->

  <!-- HERO SECTION -->
  <section class="bg-brand-navy pt-16 pb-12 md:pt-20 md:pb-14">
    <div class="padding-global">
      <div class="container-large">
        <div class="text-center max-w-3xl mx-auto">
          <!-- Label -->
          <div class="hero-badge mx-auto mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Testimonials
          </div>

          <!-- H1 Title -->
          <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl text-white mb-6">
            What Our Customers Say
          </h1>

          <!-- Subtitle -->
          <p class="text-muted text-lg max-w-2xl mx-auto mb-10">
            Real reviews from Central Minnesota homeowners and contractors.
          </p>

          <!-- Stats Row -->
          <div class="flex flex-wrap justify-center gap-8 md:gap-16">
            {stats.map((stat) => (
              <div class="text-center">
                <div class="text-3xl md:text-4xl font-medium text-white mb-1">{stat.value}</div>
                <div class="text-sm text-white/60">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- AGGREGATE RATING BANNER -->
  <section class="bg-brand-blue/10 py-8">
    <div class="padding-global">
      <div class="container-large">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
          <!-- Rating Display -->
          <div class="flex items-center gap-6">
            <div class="text-5xl font-medium text-brand-navy">4.9</div>
            <div>
              <div class="flex gap-1 mb-1">
                {renderStars(5).map(() => (
                  <svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <div class="text-text-secondary text-sm">Based on 100+ reviews</div>
            </div>
          </div>

          <!-- Review Us Button -->
          <a
            href={gbpLink}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
            </svg>
            Review Us on Google
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURED REVIEWS SECTION -->
  <section class="section section-white">
    <div class="padding-global">
      <div class="container-large">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <span class="section-label">Highlights</span>
          <h2 class="section-title mt-4">Featured Reviews</h2>
        </div>

        <!-- Featured Reviews Grid -->
        <div class="grid lg:grid-cols-3 gap-8">
          {featuredReviews.map((review) => (
            <div class="bg-bg-primary rounded-2xl p-8 border border-border-light">
              <!-- Stars -->
              <div class="flex gap-1 mb-4">
                {renderStars(review.rating).map(() => (
                  <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <!-- Quote -->
              <blockquote class="text-text-secondary mb-6 leading-relaxed">
                "{review.quote}"
              </blockquote>

              <!-- Attribution -->
              <div class="pt-4 border-t border-border-light">
                <div class="font-medium text-text-primary">{review.name}</div>
                <div class="text-sm text-text-tertiary">{review.location}</div>
                <div class="flex items-center gap-2 mt-2">
                  <span class="inline-block px-2 py-1 bg-brand-navy/10 text-brand-navy text-xs font-medium rounded">
                    {review.service}
                  </span>
                  <span class="text-xs text-text-tertiary">{review.date}</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- ALL REVIEWS GRID -->
  <section class="section section-light">
    <div class="padding-global">
      <div class="container-large">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <span class="section-label">Testimonials</span>
          <h2 class="section-title mt-4">More Reviews</h2>
        </div>

        <!-- Reviews Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {gridReviews.map((review) => (
            <div class="bg-white rounded-xl p-6 shadow-sm">
              <!-- Stars -->
              <div class="flex gap-0.5 mb-3">
                {renderStars(review.rating).map(() => (
                  <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <!-- Quote -->
              <blockquote class="text-text-secondary text-sm mb-4">
                "{review.quote}"
              </blockquote>

              <!-- Attribution -->
              <div class="flex items-center justify-between">
                <div>
                  <div class="font-medium text-text-primary text-sm">{review.name}</div>
                  <div class="text-xs text-text-tertiary">{review.location}</div>
                </div>
                <span class="inline-block px-2 py-1 bg-bg-primary text-text-secondary text-xs rounded">
                  {review.service}
                </span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- REVIEW CTA SECTION -->
  <section class="section section-dark">
    <div class="padding-global">
      <div class="container-medium">
        <div class="text-center">
          <h2 class="section-title text-white mb-4">Share Your Experience</h2>
          <p class="text-muted text-lg max-w-xl mx-auto mb-8">
            Had a great experience with Property Pros? We'd love to hear about it. Your feedback helps us improve and helps other homeowners find quality drywall services.
          </p>
          <a
            href={gbpLink}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
            </svg>
            Leave a Google Review
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CONTACT SECTION -->
  <Contact />
</Layout>
