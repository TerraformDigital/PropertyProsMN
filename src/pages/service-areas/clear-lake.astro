---
import Layout from '../../layouts/Layout.astro';
import Contact from '../../components/home/Contact.astro';

// <!-- SCHEMA: LocalBusiness, Service, AreaServed - Clear Lake, MN -->

// Clear Lake specific content
const cityName = 'Clear Lake';
const cityTagline = 'Our Home Base';

// Services offered
const services = [
  {
    title: 'New Construction Drywall',
    description: 'Complete drywall installation for Clear Lake\'s new homes, from framing to final finish.',
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
  },
  {
    title: 'Repair & Restoration',
    description: 'Fixing water damage, cracks, and holes for our Clear Lake neighbors with quick, quality repairs.',
    icon: 'M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z',
  },
  {
    title: 'Texture Matching',
    description: 'Expert texture matching for seamless repairs that blend perfectly with existing walls.',
    icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z',
  },
  {
    title: 'Basement Finishing',
    description: 'Transforming Clear Lake basements into comfortable living spaces with professional drywall work.',
    icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  },
];

// FAQs specific to Clear Lake
const faqs = [
  {
    question: 'How quickly can you respond to projects in Clear Lake?',
    answer: 'Since Clear Lake is our home base, we can often provide same-day estimates and typically start projects within a few days of approval. For emergency water damage repairs, we prioritize Clear Lake calls and can usually respond within hours.',
  },
  {
    question: 'Do you work on the older homes in Clear Lake?',
    answer: 'Absolutely! Many Clear Lake homes have character and history. We\'re experienced in matching original textures and working with the unique challenges of older construction, including plaster repair and updating to modern drywall.',
  },
  {
    question: 'What areas of Clear Lake do you serve?',
    answer: 'We serve all of Clear Lake, from downtown properties to lakeside homes and the surrounding rural areas. No project is too close—we\'re happy to work with our immediate neighbors!',
  },
  {
    question: 'Can you help with permits for Clear Lake construction projects?',
    answer: 'While we don\'t pull permits ourselves, we work closely with Clear Lake city officials and can guide you through the permit process for larger renovation projects. We ensure all our work meets local building codes.',
  },
];
---

<Layout
  title="Clear Lake Drywall Contractors | Property Pros Home Base | Central MN"
  description="Property Pros is headquartered in Clear Lake, MN. As your local drywall experts, we offer fast response times and hometown quality for all drywall installation, repair, and finishing projects."
>
  <!-- HERO SECTION -->
  <section class="bg-brand-navy pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="padding-global">
      <div class="container-large">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div>
            <!-- Breadcrumb -->
            <nav class="flex items-center gap-2 text-sm text-white/60 mb-6">
              <a href="/service-areas" class="hover:text-white transition-colors">Service Areas</a>
              <span>/</span>
              <span class="text-white">{cityName}</span>
            </nav>

            <!-- Label -->
            <div class="hero-badge mb-6">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              {cityTagline}
            </div>

            <!-- H1 Title -->
            <h1 class="hero-title text-4xl md:text-5xl lg:text-5xl text-white mb-6">
              Drywall Services in Clear Lake, Minnesota
            </h1>

            <!-- Intro paragraph -->
            <p class="text-muted text-lg mb-8">
              Clear Lake isn't just where we work—it's where we live. Property Pros was founded here, and we've been serving our neighbors with professional drywall services for over 15 years. When you hire us, you're hiring your neighbors.
            </p>

            <!-- CTAs -->
            <div class="flex flex-wrap gap-4">
              <a href="/contact" class="btn btn-primary">
                Get a Free Estimate
              </a>
              <a href="tel:+13205551234" class="btn btn-outline-light">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Call Us Today
              </a>
            </div>
          </div>

          <!-- Hero Image -->
          <div class="aspect-[4/3] rounded-2xl overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=800&q=80"
              alt="Clear Lake Minnesota home with professional drywall work"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES SECTION -->
  <section class="section section-white">
    <div class="padding-global">
      <div class="container-large">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <span class="section-label">What We Do</span>
          <h2 class="section-title mt-4 mb-4">Drywall Services for Clear Lake Homes</h2>
          <p class="text-secondary max-w-2xl mx-auto">
            From small repairs to complete installations, we provide comprehensive drywall services tailored to Clear Lake's mix of lakeside cottages, family homes, and modern builds.
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
          {services.map((service) => (
            <div class="bg-bg-primary rounded-xl p-6 lg:p-8">
              <div class="w-12 h-12 rounded-lg bg-brand-navy/10 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon} />
                </svg>
              </div>
              <h3 class="text-lg font-medium text-text-primary mb-2">{service.title}</h3>
              <p class="text-text-secondary text-sm">{service.description}</p>
            </div>
          ))}
        </div>

        <!-- View All Services -->
        <div class="text-center mt-10">
          <a href="/services" class="btn btn-outline">
            View All Services
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- WHY CHOOSE US SECTION -->
  <section class="section section-light">
    <div class="padding-global">
      <div class="container-large">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="aspect-[4/3] rounded-2xl overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=800&q=80"
              alt="Property Pros team working on Clear Lake drywall project"
              class="w-full h-full object-cover"
            />
          </div>

          <!-- Content -->
          <div>
            <span class="section-label">Hometown Advantage</span>
            <h2 class="section-title mt-4 mb-6">Why Clear Lake Chooses Property Pros</h2>

            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-medium text-text-primary mb-2">We're Your Neighbors</h3>
                <p class="text-text-secondary">
                  Our team lives in Clear Lake. We shop at the same stores, our kids go to the same schools, and we genuinely care about maintaining the quality of homes in our community.
                </p>
              </div>

              <div>
                <h3 class="text-lg font-medium text-text-primary mb-2">Fastest Response in Town</h3>
                <p class="text-text-secondary">
                  Water damage at midnight? A renovation deadline that moved up? Being headquartered here means we can respond to Clear Lake emergencies faster than anyone else.
                </p>
              </div>

              <div>
                <h3 class="text-lg font-medium text-text-primary mb-2">Local Reputation Matters</h3>
                <p class="text-text-secondary">
                  In a small town, word travels fast. We've built our business on referrals from satisfied Clear Lake neighbors, and we work hard to maintain that trust with every project.
                </p>
              </div>

              <div>
                <h3 class="text-lg font-medium text-text-primary mb-2">No Travel Charges</h3>
                <p class="text-text-secondary">
                  For Clear Lake projects, there are no trip fees or travel surcharges. You get our best rates because we're already here.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- LOCAL TESTIMONIAL -->
  <section class="section section-white">
    <div class="padding-global">
      <div class="container-medium">
        <div class="bg-brand-navy rounded-2xl p-8 md:p-12 text-center">
          <!-- Stars -->
          <div class="flex justify-center gap-1 mb-6">
            {[1, 2, 3, 4, 5].map(() => (
              <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-xl md:text-2xl text-white mb-6 leading-relaxed">
            "Living on the lake, humidity is always a concern. Property Pros knew exactly how to handle our basement finishing project. They used the right materials and techniques for our lakeside conditions. The work has held up beautifully through two Minnesota winters already."
          </blockquote>

          <!-- Attribution -->
          <div class="text-white/80">
            <div class="font-medium">Robert & Linda P.</div>
            <div class="text-sm text-white/60">Clear Lake, MN — Lakeside Home</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ SECTION -->
  <section class="section section-light">
    <div class="padding-global">
      <div class="container-medium">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <span class="section-label">Questions</span>
          <h2 class="section-title mt-4 mb-4">Clear Lake Drywall FAQs</h2>
          <p class="text-secondary max-w-2xl mx-auto">
            Common questions from our Clear Lake neighbors about our drywall services.
          </p>
        </div>

        <!-- FAQ List -->
        <div class="space-y-4">
          {faqs.map((faq, index) => (
            <details class="group bg-white rounded-xl shadow-sm">
              <summary class="flex items-center justify-between cursor-pointer p-6 list-none">
                <h3 class="text-lg font-medium text-text-primary pr-4">{faq.question}</h3>
                <span class="flex-shrink-0 w-8 h-8 rounded-full bg-bg-primary flex items-center justify-center group-open:rotate-45 transition-transform">
                  <svg class="w-5 h-5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                </span>
              </summary>
              <div class="px-6 pb-6">
                <p class="text-text-secondary">{faq.answer}</p>
              </div>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- NEARBY AREAS -->
  <section class="section section-white">
    <div class="padding-global">
      <div class="container-medium">
        <div class="text-center">
          <span class="section-label">Nearby Areas</span>
          <h2 class="section-title mt-4 mb-6">Also Serving Communities Near Clear Lake</h2>
          <p class="text-secondary mb-8">
            While Clear Lake is our home, we proudly serve all surrounding Central Minnesota communities.
          </p>

          <div class="flex flex-wrap justify-center gap-3 mb-8">
            <a href="/service-areas/st-cloud" class="px-4 py-2 bg-bg-primary text-text-primary text-sm font-medium rounded-full hover:bg-brand-navy hover:text-white transition-colors">
              St. Cloud
            </a>
            <a href="/service-areas/sartell" class="px-4 py-2 bg-bg-primary text-text-primary text-sm font-medium rounded-full hover:bg-brand-navy hover:text-white transition-colors">
              Sartell
            </a>
            <a href="/service-areas/sauk-rapids" class="px-4 py-2 bg-bg-primary text-text-primary text-sm font-medium rounded-full hover:bg-brand-navy hover:text-white transition-colors">
              Sauk Rapids
            </a>
            <a href="/service-areas/waite-park" class="px-4 py-2 bg-bg-primary text-text-primary text-sm font-medium rounded-full hover:bg-brand-navy hover:text-white transition-colors">
              Waite Park
            </a>
          </div>

          <a href="/service-areas" class="btn btn-outline">
            View All Service Areas
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CONTACT SECTION -->
  <Contact />
</Layout>
