---
import Layout from '../layouts/Layout.astro';

const serviceOptions = [
  'Drywall Installation',
  'Drywall Repair',
  'Drywall Finishing',
  'Texture Services',
  'Commercial Drywall',
  'Contractor Services',
  'Other',
];

const serviceAreas = [
  { name: 'St. Cloud', description: 'Downtown & surrounding areas' },
  { name: 'Sartell', description: 'Full service coverage' },
  { name: 'Sauk Rapids', description: 'Residential & commercial' },
  { name: 'Waite Park', description: 'All neighborhoods' },
];

const contactInfo = [
  {
    icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
    label: 'Phone',
    value: '320-743-8388',
    href: 'tel:320-743-8388',
  },
  {
    icon: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    label: 'Email',
    value: 'info@propertyprosmn.com',
    href: 'mailto:info@propertyprosmn.com',
  },
  {
    icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
    label: 'Hours',
    value: 'Mon-Fri 7:00 AM - 5:00 PM',
    href: null,
  },
];

const faqs = [
  {
    question: 'How do I get a free estimate?',
    answer: 'Simply fill out the contact form above, give us a call, or send us an email. We\'ll schedule a convenient time to assess your project and provide a detailed, no-obligation estimate.',
  },
  {
    question: 'What areas do you serve?',
    answer: 'We serve the greater St. Cloud area and Central Minnesota, including Sartell, Sauk Rapids, Waite Park, Cold Spring, Richmond, and surrounding communities within about 30 miles of St. Cloud.',
  },
  {
    question: 'How quickly can you start my project?',
    answer: 'Our availability varies based on current workload. For most projects, we can typically begin within 1-2 weeks of the estimate. Emergency repairs may be accommodated sooner based on availability.',
  },
  {
    question: 'Do you offer warranties on your work?',
    answer: 'Yes! We stand behind our workmanship with a satisfaction guarantee. Specific warranty terms vary by project type and will be discussed during your estimate.',
  },
  {
    question: 'What payment methods do you accept?',
    answer: 'We accept cash, checks, and all major credit cards. For larger projects, we can discuss payment plans. A deposit is typically required to schedule your project.',
  },
];
---

<Layout
  title="Contact Property Pros Drywall | Get a Free Quote | Central MN"
  description="Contact Property Pros Drywall for a free estimate on your drywall project. Serving St. Cloud, Sartell, Sauk Rapids, and Central Minnesota. Call 320-743-8388."
>
  <!-- HERO SECTION WITH CONTACT FORM -->
  <section class="section-hero relative pb-32">
    <div class="padding-global">
      <div class="container-medium">
        <!-- Centered Header -->
        <div class="text-center pt-16 pb-12">
          <div class="hero-badge mx-auto mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Contact Us
          </div>

          <h1 class="hero-title text-5xl md:text-6xl text-white mb-6">
            Get in touch with us today
          </h1>

          <!-- REPLACE: Subtitle/intro paragraph -->
          <p class="text-muted text-lg max-w-2xl mx-auto">
            Ready to tackle your home improvement projects? Whether you need a quick fix, a renovation, or regular maintenance, Property Pros is here to help.
          </p>
        </div>

        <!-- Contact Form Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10 max-w-2xl mx-auto relative z-10">
          <form class="space-y-6">
            <!-- Two Column: Name & Phone -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="form-label">Full Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="form-input"
                  placeholder="Your full name"
                />
              </div>
              <div>
                <label for="phone" class="form-label">Phone Number</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="form-input"
                  placeholder="(320) 000-0000"
                />
              </div>
            </div>

            <!-- Service Type -->
            <div>
              <label for="service" class="form-label">Select Service</label>
              <select
                id="service"
                name="service"
                required
                class="form-input is-select"
              >
                <option value="">Choose a service...</option>
                {serviceOptions.map((option) => (
                  <option value={option.toLowerCase().replace(/\s+/g, '-')}>{option}</option>
                ))}
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="form-label">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="form-input form-textarea"
                placeholder="Tell us about your project..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-full">
              Send Message
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- MAP & LOCATIONS SECTION -->
  <section class="section section-white">
    <div class="padding-global">
      <div class="container-large">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <span class="section-label">Our Service Area</span>
          <h2 class="section-title mt-4">Areas We Serve</h2>
          <!-- REPLACE: Service area description -->
          <p class="text-secondary mt-4 max-w-2xl mx-auto">
            We proudly serve St. Cloud and the surrounding Central Minnesota communities. Contact us to confirm service availability in your area.
          </p>
        </div>

        <!-- Map Placeholder -->
        <!-- REPLACE: Embed Google Maps iframe when service area is finalized -->
        <div class="bg-bg-secondary rounded-xl overflow-hidden mb-12 aspect-[16/9] flex items-center justify-center">
          <div class="text-center">
            <svg class="w-16 h-16 text-text-tertiary mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="text-text-tertiary font-medium">Map Coming Soon</p>
            <p class="text-text-tertiary text-sm mt-1">Central Minnesota Service Area</p>
          </div>
        </div>

        <!-- Location Cards Grid -->
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {serviceAreas.map((area) => (
            <div class="bg-bg-primary border border-border-light rounded-xl p-6 text-center hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-brand-navy rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <!-- REPLACE: Actual service area cities -->
              <h3 class="font-medium text-text-primary mb-1">{area.name}</h3>
              <p class="text-sm text-text-secondary mb-4">{area.description}</p>
              <a href="#" class="text-sm font-medium text-brand-blue hover:underline inline-flex items-center gap-1">
                Get Directions
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- ADDITIONAL CONTACT INFO SECTION -->
  <section class="section-light py-16">
    <div class="padding-global">
      <div class="container-large">
        <div class="grid md:grid-cols-3 gap-8">
          {contactInfo.map((info) => (
            <div class="flex items-center gap-4 p-6 bg-white rounded-xl border border-border-light">
              <div class="w-14 h-14 bg-brand-navy rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={info.icon} />
                </svg>
              </div>
              <div>
                <div class="text-sm text-text-secondary uppercase tracking-wider mb-1">{info.label}</div>
                {info.href ? (
                  <a href={info.href} class="font-medium text-text-primary hover:text-brand-blue transition-colors">
                    {info.value}
                  </a>
                ) : (
                  <div class="font-medium text-text-primary">{info.value}</div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ SECTION -->
  <section class="section section-white" itemscope itemtype="https://schema.org/FAQPage">
    <div class="padding-global">
      <div class="container-large">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Left - Header -->
          <div>
            <span class="section-label">FAQ</span>
            <h2 class="section-title mt-4">Frequently Asked Questions</h2>
            <!-- REPLACE: FAQ intro text -->
            <p class="text-secondary mt-4">
              Have questions about working with Property Pros? Find answers to common questions below, or contact us directly for more information.
            </p>

            <!-- Direct Contact CTA -->
            <div class="mt-8 p-6 bg-bg-primary rounded-xl">
              <h3 class="font-medium text-text-primary mb-2">Still have questions?</h3>
              <p class="text-sm text-text-secondary mb-4">We're here to help. Reach out and we'll get back to you as soon as possible.</p>
              <a href="tel:320-743-8388" class="btn btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Call Us Now
              </a>
            </div>
          </div>

          <!-- Right - FAQ List -->
          <div class="space-y-4">
            {faqs.map((faq) => (
              <details class="group bg-bg-primary rounded-lg border border-border-light" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                  <h3 class="font-medium text-text-primary pr-4" itemprop="name">
                    {faq.question}
                  </h3>
                  <div class="w-8 h-8 bg-brand-navy rounded-lg flex items-center justify-center flex-shrink-0 group-open:rotate-45 transition-transform">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                  </div>
                </summary>
                <div class="px-6 pb-6" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                  <p class="text-secondary" itemprop="text">
                    {faq.answer}
                  </p>
                </div>
              </details>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
