    max-width: 48rem;
    margin: 0 auto;
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .legal-content p {
    margin-bottom: 1.5rem;
  }

  .legal-content h2 {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .legal-content h3 {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .legal-content ul {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    list-style-type: disc;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
  }

